<script src="script.js"></script>
<div class="container" style="margin-top: 5%;">
    <div class="row">
        <div class="col-sm-4"> </div>
        <div class="col-md-4">

            <div class="tab-content">
                <div id="home" class="tab-pane fade in active">

                    <form action="/output" method="get">

                        <div class="form-group">
                            <label for="UserName">Name</label>
                            <input type="text" class="form-control" name='name' pattern="^[A-Z]{1}([a-z]|\s){4,}"
                                title="First letter should be capital, length > 4">
                        </div>

                        <div class="form-group">
                            <label for="email">Email address:</label>
                            <input type="email" class="form-control" id="email" name='email'
                                pattern="^([a-zA-Z0-9_\-\.]+)@([a-zA-Z0-9_\-\.]+)\.([a-zA-Z]{2,5})$"
                                title="not a valid email" onblur="validation('email')(this)">
                        </div>

                        <div class="form-group">
                            <label for="pwd">Password:</label>
                            <input type="password" class="form-control" id="pwd" name="password">
                        </div>

                        <div class="form-group">
                            <label for="pwd">Mobile number:</label>
                            <input type="text" class="form-control" id="pwd" name='mobnum' pattern="\d{10,12}"
                                title="not a valid mobile number">
                        </div>

                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Example select</label>
                            <select class="form-control" id="exampleFormControlSelect1" onchange="changeMethod(this)">
                                <option value="1">Get</option>
                                <option value='2'>Post</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-default btn-lg" onclick="basicValidation()">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>